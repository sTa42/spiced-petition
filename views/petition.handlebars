{{> petitionImage}}
{{> petitionText prefix="Sign this"}}
{{#if err}}
    <h3>{{err}} </h3>
{{/if}}
<form method="POST">
    <label for="firstname">First Name
        <input name="firstname" />
    </label>
    <label for="lastname">Last Name
        <input name="lastname" />
    </label>
    <input id="hidden-input" name="signature" type="hidden" />
    
    <button>SIGN</button>
</form>
<canvas class="signature" id="signature-canvas" width="400" height="50"></canvas>

<script src="/script.js"></script>